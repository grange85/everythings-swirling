---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
    xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:media="http://search.yahoo.com/mrss/"
>


  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:10 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>
			{% if post.excerpt %}
				{{ post.excerpt | replace: '"/swirling', '"https://www.grange85.co.uk/swirling' | xml_escape }}
			{% else %}
				{{ post.content | replace: '"/swirling', '"https://www.grange85.co.uk/swirling' | xml_escape }}
			{% endif %}
		</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
		{% if post.enclosure.url contains ".mp3" %}
			<enclosure url="{{post.enclosure.url}}" length="{{post.enclosure.length}}" type="audio/mpeg" />
		{% elsif post.imgurl contains ".jpg" or post.imgurl contains "googleusercontent" %}
			<media:content url="{{post.imgurl}}" type="image/jpg" medium="image" />
		{% elsif post.imgurl contains ".png" %}
			<media:content url="{{post.imgurl}}" type="image/png" medium="image" />
		{% endif %}
		<guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
